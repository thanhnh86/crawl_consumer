{
  "name": "@adonisjs/shield",
  "description": "A middleware for AdonisJS to keep web applications secure from common web attacks",
  "version": "8.2.0",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./guards": "./build/src/guards/main.js",
    "./plugins/api_client": "./build/src/plugins/api_client.js",
    "./shield_provider": "./build/providers/shield_provider.js",
    "./shield_middleware": "./build/src/shield_middleware.js",
    "./types": "./build/src/types.js"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint && npm run clean",
    "clean": "del-cli build",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "copy:templates": "copyfiles --up 1 \"stubs/**/*.stub\" build",
    "postcompile": "npm run copy:templates",
    "build": "npm run compile",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "quick:test": "node --import=ts-node-maintained/register/esm --enable-source-maps bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/i18n": "^2.2.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^3.0.4",
    "@japa/assert": "^4.0.1",
    "@japa/file-system": "^2.3.2",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@swc/core": "1.10.7",
    "@types/node": "^22.13.13",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "edge.js": "^6.2.1",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@poppinss/utils": "^6.9.2",
    "csrf": "^3.1.0",
    "helmet-csp": "^3.4.0"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/i18n": "^2.0.0",
    "@adonisjs/session": "^7.0.0",
    "@japa/api-client": "^2.0.2 || ^3.0.0",
    "edge.js": "^6.0.1"
  },
  "peerDependenciesMeta": {
    "@japa/api-client": {
      "optional": true
    },
    "edge.js": {
      "optional": true
    },
    "@adonisjs/i18n": {
      "optional": true
    }
  },
  "homepage": "https://github.com/adonisjs/shield#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/shield.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/shield/issues"
  },
  "keywords": [
    "adonisjs",
    "adonis",
    "web-security",
    "csrf",
    "csp"
  ],
  "author": "Harminder Virk <virk@adonisjs.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/guards/main.ts",
      "./src/types.ts",
      "./providers/shield_provider.ts",
      "./src/shield_middleware.ts",
      "./src/plugins/api_client.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "tests_helpers/**",
      "stubs/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
