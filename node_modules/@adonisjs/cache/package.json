{
  "name": "@adonisjs/cache",
  "description": "Official caching module for AdonisJS framework",
  "version": "1.1.3",
  "engines": {
    "node": ">=20.6.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./commands/*": "./build/commands/*.js",
    "./commands": "./build/commands/main.js",
    "./services/main": "./build/services/main.js",
    "./cache_provider": "./build/providers/cache_provider.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles --up 1 \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "index:commands": "adonis-kit index build/commands",
    "lint": "eslint",
    "format": "prettier --write .",
    "quick:test": "node --enable-source-maps --import=ts-node-maintained/register/esm bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsup-node --metafile && tsc --emitDeclarationOnly --declaration",
    "postbuild": "npm run copy:templates && npm run index:commands",
    "release": "npx release-it",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/redis": "^9.2.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/assert": "^4.0.1",
    "@japa/expect-type": "^2.0.3",
    "@japa/file-system": "^2.3.2",
    "@japa/runner": "^4.2.0",
    "@japa/snapshot": "^2.0.8",
    "@release-it/conventional-changelog": "^10.0.0",
    "@swc/core": "^1.10.16",
    "@types/node": "~20.17.19",
    "better-sqlite3": "^11.8.1",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "edge.js": "^6.2.1",
    "eslint": "^9.20.1",
    "ioredis": "^5.5.0",
    "knex": "^3.1.0",
    "luxon": "^3.5.0",
    "mysql2": "^3.12.0",
    "p-event": "^6.0.1",
    "pg": "^8.13.3",
    "prettier": "^3.5.1",
    "release-it": "^18.1.2",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.3.6",
    "typescript": "~5.7.3"
  },
  "dependencies": {
    "bentocache": "^1.2.0"
  },
  "peerDependencies": {
    "@adonisjs/assembler": "^7.0.0",
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/lucid": "^20.0.0 || ^21.0.0",
    "@adonisjs/redis": "^8.0.0 || ^9.0.0"
  },
  "peerDependenciesMeta": {
    "@adonisjs/redis": {
      "optional": true
    },
    "@adonisjs/lucid": {
      "optional": true
    }
  },
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "contributors": [
    "Romain Lanz <romain.lanz@pm.me>"
  ],
  "license": "MIT",
  "keywords": [
    "adonisjs",
    "cache",
    "caching",
    "bentocache"
  ],
  "homepage": "https://github.com/adonisjs/cache#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/cache.git"
  },
  "bugs": {
    "url": "https://github.com/adonisjs/cache/issues"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "prettier": "@adonisjs/prettier-config",
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "tsup": {
    "entry": [
      "index.ts",
      "src/types.ts",
      "providers/cache_provider.ts",
      "services/main.ts",
      "commands/cache_clear.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  },
  "packageManager": "pnpm@10.4.0"
}
